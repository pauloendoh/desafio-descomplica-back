{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["dom", "es6", "es2017", "esnext.asynciterable"],

    "moduleResolution": "node",
    "outDir": "./build",
    "declaration": false, // don't generate d.ts files
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false // don't generate js.map files
  }
}
